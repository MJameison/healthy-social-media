<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNotificationsFragment"
    android:orientation="vertical"
    android:layout_margin="4dp">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Title" />

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Message" />

    <Button
        android:id="@+id/debug_send_ch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel 1" />

    <Button
        android:id="@+id/debug_send_ch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel 2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is for debug purposes and allows you to easily generate notifications to test with." />

</LinearLayout>